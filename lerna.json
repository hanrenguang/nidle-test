{
  "version": "0.0.0",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "version": {
      "exact": true,
      "message": "chore(release): publish %s"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["main"],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
