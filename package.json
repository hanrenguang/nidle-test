{
  "name": "nidle-monorepo",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:yanuoda/nidle.git",
  "author": "Renguang Han",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/**/*"
    ],
    "nohoist": [
      "nidle-web/**",
      "nidle-web/**/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "scripts": {
    "clean": "lerna clean && rimraf node_modules",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "lint": "eslint packages/**/{lib,src,app}/*.{js,jsx,mjs,ts,tsx}",
    "format": "prettier --write .",
    "auto-fix": "prettier --write . && eslint packages/**/{lib,src,app}/*.{js,jsx,mjs,ts,tsx}"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,scss,less,json,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
